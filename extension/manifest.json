{
  "manifest_version": 3,
  "name": "Real Estate Sales Assistant",
  "version": "1.0.0",
  "description": "Asistente de ventas inmobiliarias en tiempo real para Google Meet",
  "permissions": [
    "activeTab",
    "tabCapture",
    "offscreen",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["src/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": []
}
